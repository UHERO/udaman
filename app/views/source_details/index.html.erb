<p id="notice"><%= notice %></p>

<h1><%= @universe %> Source Details</h1>
<p>
  <%= link_to "New Source Details for #{@universe}", new_source_detail_path(universe: @universe) %>
</p>

<table class="list_table">
  <thead>
    <tr>
      <th>ID</th>
      <% if current_user.dev_user? %>
        <th>-</th>
      <% end %>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <%
    univ = @universe == 'UHERO' ? '' : '%%20%%2F%s' % @universe   ## add space + / + universe name, e.g. " /dbedt"
  %>>
  <tbody>
    <% @source_details.each do |source_detail| %>
    <tr>
      <td style="text-align: center"><%= link_to source_detail.id, '/series/search?search_string=%3bdet=' + source_detail.id.to_s + univ %></td>
      <% if current_user.dev_user? %>
        <td><%= link_to 'Destroy', source_detail, method: :delete, data: { confirm: "Destroy #{source_detail[0..30]}: Are you sure??" } %></td>
      <% end %>
      <td class="linkselect"><%= link_to source_detail.description, edit_source_detail_path(source_detail) %></td>
    </tr>
    <% end %>
  </tbody>
</table>
