<%= form_for(@category) do |f| %>
  <% if @category.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@category.errors.count, 'error') %> prohibited this category from being saved:</h2>

      <ul>
      <% @category.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
    Hidden?
    <%= f.check_box :hidden %>
  </div>
  <div class="field">
    <%= f.label :parent_id %><br>
    <%= f.collection_select :parent_id, Category.where("universe = 'UHERO' AND id != ?", @category.id).order(:name), :id, :name_with_depth, {:include_blank => true}%>
  </div>
  <div class="field">
    <%= f.label :data_list_id %><br>
    <%= f.collection_select :data_list_id, DataList.where(universe: 'UHERO').all.order(:name), :id, :name, {:include_blank => true} %>
  </div>
  <div class="field">
    <%= f.label :default_geo_id, 'Default geography' %><br>
    <%= select :default_geo_id, Geography.where(universe: 'UHERO').collect {|g| ['%s (%s)' % [g.handle, g.display_name_short], g.id] }, {:include_blank => false} %> .
  </div>
  <div class="field">
    <%= f.label :default_freq, 'Default frequency' %><br>
    <%= select :default_freq, %w(A Q M W S D).collect {|x| [x, x] }, {:include_blank => false} %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<script>
  $(document).ready(function() { $("#category_data_list_id").select2(); $("#category_parent_id").select2(); })
</script>