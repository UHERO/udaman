<p id="notice"><%= notice %></p>

<h1>Listing Forecast Snapshots</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Version</th>
      <th>Comments</th>
      <% if current_user.internal_user? %>
        <th>Published</th>
      <% end %>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @forecast_snapshots.each do |fs| %>
      <tr>
        <td><%= fs.name %></td>
        <td align="center"><%= fs.version %></td>
        <td><%= fs.comments %></td>
        <% if current_user.internal_user? %>
          <td align="center"><%= fs.published ? 'Y' : 'N' %></td>
        <% end %>
        <td><%= link_to 'Show', fs %></td>
        <% if current_user.admin_user? %>
           <td><%= link_to 'Edit', edit_forecast_snapshot_path(fs) %></td>
        <% end %>
        <% if current_user.dev_user? %>
           <td><%= link_to 'Destroy', fs, method: :delete, data: { confirm: "Destroy #{fs.name}: Are you sure??" } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
<br>

<% if current_user.internal_user? %>
  <%= link_to 'New Forecast snapshot', new_forecast_snapshot_path %>
<% end %>
