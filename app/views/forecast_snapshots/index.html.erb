<p id="notice"><%= notice %></p>

<h1>Listing Forecast Snapshots</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Version</th>
      <th>Comments</th>
      <th>Published</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @forecast_snapshots.each do |forecast_snapshot| %>
      <tr>
        <td><%= forecast_snapshot.name %></td>
        <td align="center"><%= forecast_snapshot.version %></td>
        <td><%= forecast_snapshot.comments %></td>
        <td align="center"><%= forecast_snapshot.published %></td>
        <td><%= link_to 'Show', forecast_snapshot %></td>
        <% if current_user.admin_user? %>
           <td><%= link_to 'Edit', edit_forecast_snapshot_path(forecast_snapshot) %></td>
        <% end %>
        <% if current_user.dev_user? %>
           <td><%= link_to 'Destroy', forecast_snapshot, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

