<div id="summary_area">
	<h2>Edit Definition </h2>
</div>
<div id="details_mask"></div>
<div id="details_area">
	<%= form_for(@data_source) do |ds| %>
    <% if ds.disabled %>
      <h3>This load is DISABLED.</h3> Can only be re-enabled by system administrator.
    <% end %>
		<div class="field">
			<%= ds.label :eval %>
			<%= ds.text_field :eval, size: 120 %>
    </div>
    <div class="field">
			<%= ds.label :priority %>
			<%= ds.number_field :priority, size: 3 %>
		</div>
    <div class="field">
      <%= ds.label :presave_hook %>
      <%= ds.select :presave_hook, DataSourceHooks.instance_methods, { include_blank: true } %>
    </div>
    <div class="field">
      <%= ds.check_box :pseudo_history %> Check if this load is pseudo-history.
    </div>
    <div class="actions">
			<%= ds.submit %>
      <%= link_to 'Cancel', :back %>
		</div>
	<% end %>
</div>
