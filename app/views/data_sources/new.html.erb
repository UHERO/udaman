<div id="summary_area">
	<h2>Add New<br/>Loader</h2>
</div>
<div id="details_mask"></div>
<div id="details_area">
	<%= form_with(model: @data_source) do |ds| %>
		<div class="field">
			Code
			<%= ds.text_field :eval, size: 120 %>
		</div>
		<div class="field">
      <%= ds.label :priority %>
      <%= ds.number_field :priority, size: 5 %>
		</div>
    <div class="field">
      <%= ds.label :presave_hook %>
      <%= ds.select :presave_hook, LoaderHooks.instance_methods, { include_blank: true } %>
    </div>
    <div class="field">
      <%= ds.check_box :clear_before_load %> Always clear existing data points before loading
    </div>
    <div class="field">
      <%= ds.check_box :pseudo_history %> This load is pseudo-history
    </div>
		<div class="actions">
      <%= ds.hidden_field :series_id %>
			<%= ds.submit 'Save Loader' %>
      <%= link_to 'Cancel', :back %>
    </div>
	<% end %>
</div>
