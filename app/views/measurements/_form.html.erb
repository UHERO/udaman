<%= form_for(@measurement) do |f| %>
  <% if @measurement.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@measurement.errors.count, "error") %> prohibited this measurement from being saved:</h2>

      <ul>
      <% @measurement.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :prefix %><br>
    <%= f.text_field :prefix %>
  </div>
  <div class="field">
    <%= f.label :data_portal_name %><br>
    <%= f.text_field :data_portal_name %>
  </div>
  <div class="field">
    <%= f.label :units_label %><br>
    <%= f.text_field :units_label %>
  </div>
  <div class="field">
    <%= f.label :units_label_short %><br>
    <%= f.text_field :units_label_short %>
  </div>
  <div class="field">
    <%= f.label :percent %><br>
    <%= f.check_box :percent %>
  </div>
  <div class="field">
    <%= f.label :real %><br>
    <%= f.check_box :real %>
  </div>
  <div class="field">
    <%= f.label :notes %><br>
    <%= f.text_area :notes %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>


    <% if request.path =~ /edit/ %>
        <h2>List of Series</h2>
        <table>
          <thead>
          <tr><th>Series</th><th></th><th></th></tr>
          </thead>
          <tbody>
          <% @measurement.series.to_a.sort_by{|s| s.name}.each do |series| %>
              <tr>
                <td><%= series.name %></td>
                <td><%= link_to 'Remove', {controller: :measurements, action: :remove_series, id: @measurement, series_id: series.id}, remote: true, data: {remove: true} %></td>
              </tr>
          <% end %>
          </tbody>
        </table>
        <br />
        <%= render 'add_series' %>
    <% end %>
<% end %>
