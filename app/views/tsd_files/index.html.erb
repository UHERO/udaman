<p id="notice"><%= notice %></p>

<h1>Listing TSD Files</h1>

<table>
  <thead>
    <tr>
      <th>Path</th>
      <th>Latest</th>
      <th>Snapshot</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tsd_files.each do |tsd_file| %>
      <tr>
        <td><%= tsd_file.filename %></td>
        <td><%= tsd_file.latest_forecast ? 'Y' : 'N' %></td>
        <td><%= tsd_file.forecast_snapshot ? link_to(tsd_file.forecast_snapshot.name, tsd_file.forecast_snapshot) : 'None' %></td>
        <td><%= link_to 'Show', tsd_file %></td>
      </tr>
    <% end %>
  </tbody>
</table>
