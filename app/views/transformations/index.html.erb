<p id="notice"><%= notice %></p>

<h1>Listing Transformations</h1>

<table>
  <thead>
    <tr>
      <th>Key</th>
      <th>Description</th>
      <th>Formula</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @transformations.each do |transformation| %>
      <tr>
        <td><%= transformation.key %></td>
        <td><%= transformation.description %></td>
        <td><%= transformation.formula %></td>
        <td><%= link_to 'Show', transformation %></td>
        <td><%= link_to 'Edit', edit_transformation_path(transformation) %></td>
        <td><%= link_to 'Destroy', transformation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

