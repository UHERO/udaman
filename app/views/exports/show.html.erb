<p id="notice"><%= notice %></p>

<% if @export_series.empty? %>

  No series linked.

<% else %>

  <table class="list_table">
    <thead>
    <tr>
      <th><%= link_to sorthead('Name'), { action: :show, id: @export.id, sortby: 'name', dir: @nextdir } %></th>
      <th>SA</th>
      <th>Portal Name</th>
      <th>Units</th>
      <th><%= link_to sorthead('First'), { action: :show, id: @export.id, sortby: 'first', dir: @nextdir } %></th>
      <th><%= link_to sorthead('Last'), { action: :show, id: @export.id, sortby: 'last', dir: @nextdir } %></th>
      <th><%= link_to sorthead('Source'), { action: :show, id: @export.id, sortby: 'source', dir: @nextdir } %></th>
    </tr>
    </thead>

    <tbody>
    <% row = -1 %>
    <% @export_series.each do |exp_s| %>
      <% series = exp_s[:series] %>
      <% row += 1 %>
      <tr class="row<%= row % 2 %>">
        <td><%= link_to series.name, series %><% if series.restricted? %> <i class="fas fa-ban redban" title="restricted"></i><% end %></td>
        <td><%= sa_indicator(series.seasonal_adjustment) %></td>
        <td><%= series.dataPortalName %></td>
        <td title="<%= series.unit && series.unit.long_label %>"><%= series.unit && series.unit.short_label %></td>
        <td><%= exp_s[:first] %></td>
        <td><%= exp_s[:last] %></td>
        <td><%= exp_s[:source] %></td>
      </tr>
    <% end %>
    </tbody>
  </table>

<% end %>
<%= link_to 'Edit', edit_export_path(@export) %> |
<%= link_to 'Index', exports_path %>
