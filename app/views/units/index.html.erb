<p id="notice"><%= notice %></p>

<h1>Listing Units</h1>

<%= link_to 'New Unit', new_unit_path %>
<p>

<table>
  <thead>
    <tr>
      <th>Short label</th>
      <th>Long label</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @units.each do |unit| %>
      <tr>
        <td><%= unit.short_label %></td>
        <td><%= unit.long_label %></td>
        <td><%= link_to 'Edit', edit_unit_path(unit) %></td>
        <td><%= link_to 'Destroy', unit, method: :delete, data: { confirm: "Destroy unit #{unit.to_s}.\n#{num_affected(unit)}. Are you sure??" } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
