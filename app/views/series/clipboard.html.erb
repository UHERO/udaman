<% if current_user.internal_user? %>

<div id="summary_area">
 	<h1>Clip Board</h1>
  <% if @all_series && @all_series.count > 0 %>
      <h2>Total: <%= @all_series.count %></h2>
  <% end %>
  <br />
  <div>
    <p><%= link_to 'Clear clipboard', { action: :clear_clip }, data: { confirm: 'Clear your clipboard: Are you sure??' } %></p>
    <p><%= form_with url: { action: :do_clip_action } do |f| %>
        <select id="clip_actions" name="clip_actions">
          <option value=""></option>
          <option value="export">Create export</option>
          <option value="csv">Download metadata csv</option>
          <% if current_user.admin_user? %>
            <option value="meas">Create measurement</option>
            <option value="setmeta">Set metadata</option>
            <option value="restrict">Restrict series</option>
            <option value="unrestrict">Unrestrict series</option>
          <% end %>
          <% if current_user.dev_user? %>
            <option value="destroy">Destroy series</option>
          <% end %>
        </select>
      <%= f.submit 'Go' %>
      <% end %></p>
  </div>
</div>
<div id="details_area">
<% if @all_series.nil? || @all_series.empty? %>

  Clipboard empty.

<% else %>

  <%= render partial: 'list_series', locals: { all_series: @all_series } %>

<% end %>
</div>

<% end %>
