{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["es2022"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleDetection": "force",
    "isolatedModules": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "declaration": true,
    "declarationMap": true,
    "incremental": true,
    "composite": true,
    "outDir": "dist",
    "allowJs": false,
    "noEmit": false,
    "baseUrl": ".",
    "rootDir": "."
  },
  "include": ["**/*.ts", "types/**/*", "schemas/**/*"],
  "exclude": ["node_modules", "dist", "**/*.js", "**/*.test.ts", "**/*.spec.ts"]
}
